<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <x:Double x:Key="DefaultFontSize">16</x:Double>

    <!--  Fonts  -->
    <FontFamily x:Key="MainFont">/Assets/Fonts/Montserrat-Regular.ttf#Montserrat</FontFamily>
    <FontFamily x:Key="MainFontMedium">/Assets/Fonts/Montserrat-Medium.ttf#Montserrat Medium</FontFamily>
    <FontFamily x:Key="MainFontBold">/Assets/Fonts/Montserrat-Bold.ttf#Montserrat</FontFamily>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
        <Setter Property="FontSize" Value="{ThemeResource DefaultFontSize}" />
        <Setter Property="Foreground" Value="{StaticResource TextColor}" />
    </Style>

    <Style BasedOn="{StaticResource AccentButtonStyle}" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
    </Style>

</ResourceDictionary>

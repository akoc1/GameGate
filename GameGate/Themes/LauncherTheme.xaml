<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Colors  -->
    <Color x:Key="PrimaryColor">#FF4D4D</Color>
    <Color x:Key="PrimaryDarkColor">#CC3A3A</Color>
    <Color x:Key="SecondaryColor">#FFB84D</Color>
    <Color x:Key="BackgroundColor">#1E1E2E</Color>
    <Color x:Key="PanelColor">#2E2E3E</Color>
    <Color x:Key="PanelSecondaryColor">#55555F</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#F2E9E4</Color>

    <!--  Overriding accent color  -->
    <Color x:Key="SystemAccentColorDark1">#FF4D4D</Color>
    <Color x:Key="SystemAccentColorDark2">#FF4D4D</Color>
    <Color x:Key="SystemAccentColorDark3">#FF4D4D</Color>

    <Color x:Key="SystemAccentColorLight1">#FF4D4D</Color>
    <Color x:Key="SystemAccentColorLight2">#FF4D4D</Color>
    <Color x:Key="SystemAccentColorLight3">#FF4D4D</Color>

    <!--  Brushes  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />

</ResourceDictionary>

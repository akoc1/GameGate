<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="GameGate.UserControls.NotificationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GameGate.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        x:Name="RootGrid"
        Height="30"
        MinWidth="400"
        Margin="48,16"
        Background="{StaticResource PanelColor}"
        CornerRadius="4"
        Opacity="0"
        RenderTransformOrigin="0.5,0.5"
        Visibility="Collapsed">

        <Grid.RenderTransform>
            <TranslateTransform x:Name="RootTransform" Y="20" />
        </Grid.RenderTransform>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Sol mavi dikdörtgen  -->
        <Rectangle
            x:Name="IndicatorRectangle"
            Width="12"
            Height="40"
            VerticalAlignment="Center"
            Fill="DodgerBlue" />

        <Grid Grid.Column="1">
            <!--  Progress bar  -->
            <ProgressBar
                x:Name="ProgressBar"
                MinHeight="30"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                CornerRadius="0"
                Foreground="{StaticResource PanelSecondaryColor}"
                Value="40" />
            <!--  Bilgilendirme yazısı  -->
            <TextBlock
                x:Name="MessageText"
                Margin="6,0"
                VerticalAlignment="Center"
                FontSize="14"
                Text="Hata!!"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>

</UserControl>
